<Window x:Class="Algos4Lab2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="485" Width="923">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
            <Button x:Name="btnBuildTree" Content="Построить дерево" Click="btnBuildTree_Click" Margin="5"/>
            <Button x:Name="btnShowSelected" Content="Показать выбранный узел" Click="btnShowSelected_Click" Margin="5"/>
            <Button x:Name="btnShowParent" Content="Показать родителя" Click="btnShowParent_Click" Margin="5"/>
        </StackPanel>
        <TreeView x:Name="TreeView" Grid.Row="1" Margin="5,5,503,0" Height="354" VerticalAlignment="Top"/>
        <TextBox x:Name="txtMessages" IsReadOnly="True" AcceptsReturn="True" TextWrapping="Wrap" Grid.Row="1" Margin="0,10,24,187" HorizontalAlignment="Right" Width="445"/>
    </Grid>
</Window>